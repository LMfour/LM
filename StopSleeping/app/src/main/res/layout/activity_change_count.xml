<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeCountActivity">

    <ImageView
        android:id="@+id/men_round_img"
        android:layout_width="426dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="8dp"
        android:scaleType='fitXY'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom_round" />

    <TextView
        android:id="@+id/men_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="8dp"
        android:text="횟수변경"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/men_back_btn"
        android:layout_width="37dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType='centerInside'
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goback_btn" />


    <View
        android:id="@+id/count_background1"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:background="@drawable/menu_round_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/count_background2"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:background="@drawable/menu_round_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_background1"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/count_background3"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:background="@drawable/menu_round_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_background2"
        app:layout_constraintVertical_bias="0.13"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/first_phase_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1단계"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_background1"
        app:layout_constraintVertical_bias="0.050000012"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/second_phase_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2단계"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_background2"
        app:layout_constraintVertical_bias="0.06999999"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/third_phase_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3단계"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_background3"
        app:layout_constraintVertical_bias="0.120000005"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/alarm_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_phase_txt" />

    <TextView
        android:id="@+id/sing_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노래"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_phase_txt" />

    <TextView
        android:id="@+id/station_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴게소 안내"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_phase_txt" />

    <android.widget.Button
        android:id="@+id/count_sellect_btn1"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@drawable/testbtn_background"

        android:backgroundTint="#E19F3D"
        android:text="선택"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/count_background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_background1"
        app:layout_constraintVertical_bias="0.43"
        tools:ignore="MissingConstraints" />

    <android.widget.Button
        android:id="@+id/count_sellect_btn2"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@drawable/testbtn_background"

        android:backgroundTint="#E19F3D"
        android:text="선택"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/count_background2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_background2"
        app:layout_constraintVertical_bias="0.43"
        tools:ignore="MissingConstraints" />

    <android.widget.Button
        android:id="@+id/count_sellect_btn3"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@drawable/testbtn_background"

        android:backgroundTint="#E19F3D"
        android:text="선택"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/count_background3"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_background3"
        app:layout_constraintVertical_bias="0.43"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/count_now_background"
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/menu_round_btn"
        app:layout_constraintBottom_toTopOf="@+id/count_background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/men_round_img"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_now_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="선택된 단계"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_now_background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_count_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_now_background"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>