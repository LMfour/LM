<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driving"
    tools:context=".LoginActivity">

    <ImageButton
        android:id="@+id/lg_kakao_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/kakao_login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lg_title_text" />

    <android.widget.Button
        android:id="@+id/lg_facebook_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="#3B5999"
        android:text="페이스북 계정으로 로그인"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lg_kakao_btn"
        app:layout_constraintStart_toStartOf="@+id/lg_kakao_btn"
        app:layout_constraintTop_toBottomOf="@+id/lg_kakao_btn" />

    <android.widget.Button
        android:id="@+id/lg_naver_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="#1DC800"
        android:text="네이버 계정으로 로그인"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lg_facebook_btn"
        app:layout_constraintStart_toStartOf="@+id/lg_facebook_btn"
        app:layout_constraintTop_toBottomOf="@+id/lg_facebook_btn" />

    <TextView
        android:id="@+id/lg_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="졸면않되!"
        android:textColor="#DB8213"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lg_nonlg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="비회원 로그인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lg_naver_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>