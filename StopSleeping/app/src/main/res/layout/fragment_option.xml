<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/opt_chk_btn"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:scaleType='fitXY'
        app:layout_constraintStart_toStartOf="@+id/opt_info_btn"
        app:layout_constraintTop_toBottomOf="@+id/opt_info_btn"
        app:srcCompat="@drawable/menu_round_btn" />

    <TextView
        android:id="@+id/opt_chgcnt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:text="횟수변경  >"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/opt_chk_btn"
        app:layout_constraintTop_toTopOf="@+id/opt_chk_btn" />

    <ImageButton
        android:id="@+id/opt_info_btn"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:scaleType='fitXY'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_round_btn" />

    <TextView
        android:id="@+id/opt_chgalm_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:text="알람변경  >"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/opt_info_btn"
        app:layout_constraintTop_toTopOf="@+id/opt_info_btn" />

    <ImageButton
        android:id="@+id/opt_logout_btn"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:scaleType='fitXY'
        app:layout_constraintStart_toStartOf="@+id/opt_chk_btn"
        app:layout_constraintTop_toBottomOf="@+id/opt_chk_btn"
        app:srcCompat="@drawable/menu_round_btn" />

    <TextView
        android:id="@+id/opt_logout_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:text="로그아웃  >"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/opt_logout_btn"
        app:layout_constraintTop_toTopOf="@+id/opt_logout_btn" />

    <TextView
        android:id="@+id/menu_opt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="287dp"
        android:layout_marginTop="338dp"
        android:text="설정"
        android:textSize="18dp"
        android:textStyle="bold"
        android:shadowRadius="0.5"
        android:shadowColor="#000000"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>